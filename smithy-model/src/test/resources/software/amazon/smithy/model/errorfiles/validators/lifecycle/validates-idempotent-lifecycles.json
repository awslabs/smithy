{
    "smithy": "0.5.0",
    "shapes": {
        "ns.foo#MyService": {
            "type": "service",
            "version": "2020-03-12",
            "resources": [
                {
                    "target": "ns.foo#Resource"
                }
            ]
        },
        "ns.foo#Resource": {
            "type": "resource",
            "identifiers": {
                "id": {
                    "target": "smithy.api#String"
                }
            },
            "put": {
                "target": "ns.foo#PutResource"
            },
            "delete": {
                "target": "ns.foo#DeleteResource"
            }
        },
        "ns.foo#PutResource": {
            "type": "operation",
            "input": {
                "target": "ns.foo#ResourceInput"
            }
        },
        "ns.foo#DeleteResource": {
            "type": "operation",
            "input": {
                "target": "ns.foo#ResourceInput"
            }
        },
        "ns.foo#ResourceInput": {
            "type": "structure",
            "members": {
                "id": {
                    "target": "smithy.api#String",
                    "traits": {
                        "smithy.api#required": true
                    }
                }
            }
        }
    }
}
