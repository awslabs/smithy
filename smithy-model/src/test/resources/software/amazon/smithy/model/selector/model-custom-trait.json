{
  "smithy": "0.3.0",

  "com.example": {
    "shapes": {
      "beta": {
        "type": "structure",
        "trait": {"selector": "member:of(structure)"}
      },
      "structuredTrait": {
        "type": "structure",
        "members": {
          "lorem": {
            "target": "StringShape",
            "required": true
          },
          "ipsum": {
            "target": "StringShape",
            "required": true
          },
          "dolor": {
            "target": "StringShape"
          }
        },
        "trait": {
          "selector": "string",
          "conflicts": [
            "com.example#beta"
          ]
        }
      },

      "MyShape": {
        "type": "structure",
        "members": {
          "foo": {
            "target": "StringShape",
            "required": true,
            "com.example#beta": true
          }
        }
      },

      "StringShape": {
        "type": "string",
        "com.example#structuredTrait": {
          "lorem": "This is a custom trait!",
          "ipsum": "lorem and ipsum are both required values."
        }
      },

      "AnotherStructureShape": {
        "type" : "structure",
        "members": {
          "bar" : {
            "target": "MyShape",
            "required": true,
            "com.example#beta" : true
          }
        }
      }
    }
  }
}
